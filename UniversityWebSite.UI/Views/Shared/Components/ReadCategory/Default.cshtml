@model List<Category>

<div class="contentIn">
    <a class="btn btn-outline-primary" asp-controller="Dashboard" asp-action="CreateCategory" asp-route-page="@ViewData["pageName"]">Yeni Kategori Oluştur</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">Güncellenme Tarihi</th>
                <th scope="col">Üst Başlık</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Alt Başlık Sayısı</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].CreatedTime</td>
                    <td>@Model[i].UpdatedTime</td>
                    <td>@Model[i].NavBarHeader</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Subtitles.Count</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Dashboard" asp-action="UpdateCategory" asp-route-page="@ViewData["pageName"]" asp-route-id="@Model[i].Id"><i class="fas fa-edit"></i> Güncelle</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Dashboard" asp-action="DeleteCategory" asp-route-page="@ViewData["pageName"]" asp-route-id="@Model[i].Id"><i class="fas fa-trash"></i>  Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
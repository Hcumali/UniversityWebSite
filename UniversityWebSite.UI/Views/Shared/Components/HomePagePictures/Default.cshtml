@model List<Picture>

<div class="contentInSmall">
    <h1>Anasayfa - Tanıtım Görselleri Bölümü</h1>
    <br />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">Güncellenme Tarihi</th>
                <th scope="col">URL</th>
                <th scope="col">Önizleme</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].CreatedTime</td>
                    <td>@Model[i].UpdatedTime</td>
                    <td>@Model[i].Url</td>
                    <td>
                        <img width="180" height="135" src="@Model[i].Url">
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Dashboard" asp-action="UpdateCategory" asp-route-page="@ViewData["pageName"]" asp-route-id="@Model[i].Id"><i class="fas fa-edit"></i> Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model List<Keyword>

<div class="contentInSmall">
    <h1>Anasayfa - Anahtar Kelimeler Bölümü</h1> 
    <br />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">Güncellenme Tarihi</th>
                <th scope="col">Başlık</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].CreatedTime</td>
                    <td>@Model[i].UpdatedTime</td>
                    <td>@Model[i].Title</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Dashboard" asp-action="UpdateKeyword" asp-route-id="@Model[i].Id"><span class="glyphicon glyphicon-edit"></span>Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>